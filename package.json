{
  "name": "@nextnode/validation",
  "version": "0.0.0",
  "description": "A TypeScript validation library powered by ArkType for comprehensive input validation on both frontend and backend in NextNode projects",
  "keywords": [
    "validation",
    "arktype",
    "typescript",
    "schema",
    "input-validation",
    "nextnode",
    "frontend",
    "backend",
    "type-safe"
  ],
  "license": "MIT",
  "author": "NextNodeSolutions",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "rm -rf dist",
    "commitlint": "commitlint --edit",
    "format": "biome check --write --no-errors-on-unmatched .",
    "lint": "eslint . --max-warnings 0 --fix",
    "lint-staged": "lint-staged",
    "prebuild": "pnpm clean",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nextnode/logger": "^0.2.4",
    "arktype": "^2.1.22"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@nextnode/eslint-plugin": "^1.2.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.1.4",
    "better-sort-package-json": "^1.1.1",
    "eslint": "^9.27.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "eslint": "^9.22.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "README.md",
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts"
}