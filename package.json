{
	"name": "@nextnode/validation",
	"version": "2.1.0",
	"description": "A TypeScript validation library powered by ArkType for comprehensive input validation on both frontend and backend in NextNode projects",
	"keywords": [
		"arktype",
		"backend",
		"frontend",
		"input-validation",
		"nextnode",
		"schema",
		"type-safe",
		"typescript",
		"validation"
	],
	"license": "MIT",
	"author": "NextNodeSolutions",
	"files": [
		"CHANGELOG.md",
		"README.md",
		"dist/**/*.d.ts",
		"dist/**/*.js"
	],
	"main": "./dist/index.js",
	"scripts": {
		"prebuild": "pnpm clean",
		"build": "tsup",
		"changeset": "changeset",
		"changeset:publish": "changeset publish",
		"changeset:version": "changeset version",
		"clean": "rm -rf dist",
		"commitlint": "commitlint --edit",
		"format": "prettier --write .",
		"lint": "biome check --write --no-errors-on-unmatched",
		"lint-staged": "lint-staged",
		"prepare": "husky",
		"prepublishOnly": "pnpm build",
		"size": "du -sh dist/ && find dist -name '*.js' -exec wc -c {} + | tail -1",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@nextnode/logger": "^0.3.0",
		"arktype": "^2.1.28"
	},
	"devDependencies": {
		"@biomejs/biome": "^2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.4",
		"@commitlint/cli": "^19",
		"@nextnode/standards": "^2",
		"@types/node": "^22",
		"@vitest/coverage-v8": "^3",
		"better-sort-package-json": "^1",
		"husky": "^9",
		"lint-staged": "^16",
		"prettier": "^3",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tsup": "^8.5.1",
		"typescript": "^5",
		"vitest": "^3"
	},
	"peerDependencies": {
		"express": "^4.0.0 || ^5.0.0",
		"fastify": "^4.0.0 || ^5.0.0",
		"hono": "^4.0.0",
		"react-hook-form": "^7.0.0"
	},
	"peerDependenciesMeta": {
		"express": {
			"optional": true
		},
		"fastify": {
			"optional": true
		},
		"hono": {
			"optional": true
		},
		"react-hook-form": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"packageManager": "pnpm@10.11.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./react-hook-form": {
			"types": "./dist/react-hook-form.d.ts",
			"import": "./dist/react-hook-form.js"
		},
		"./middleware": {
			"types": "./dist/middleware.d.ts",
			"import": "./dist/middleware.js"
		},
		"./middleware/hono": {
			"types": "./dist/middleware/hono.d.ts",
			"import": "./dist/middleware/hono.js"
		},
		"./middleware/express": {
			"types": "./dist/middleware/express.d.ts",
			"import": "./dist/middleware/express.js"
		},
		"./middleware/fastify": {
			"types": "./dist/middleware/fastify.d.ts",
			"import": "./dist/middleware/fastify.js"
		},
		"./schemas": {
			"types": "./dist/schemas.d.ts",
			"import": "./dist/schemas.js"
		}
	},
	"module": "./dist/index.js",
	"pnpm": {
		"overrides": {
			"@eslint/plugin-kit": ">=0.3.4",
			"@nextnode/standards>vite": ">=6.4.1",
			"brace-expansion": ">=2.0.2",
			"glob": ">=10.5.0",
			"tmp": ">=0.2.4"
		}
	},
	"prettier": "@nextnode/standards/prettier",
	"sideEffects": false,
	"types": "./dist/index.d.ts"
}
